                                                    {
                                                        cikisSaati = h.Saat?.ToString(@"hh\:mm");  // Nullable olduğu için güvenli erişim
                                                        break;
                                                    }
                                                }
                                            }
                                        }
                                        @cikisSaati
                                    </td>
                                </tr>
                            }
